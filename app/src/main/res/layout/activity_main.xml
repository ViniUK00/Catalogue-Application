<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/customText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:text="Welcome to Animal Gallery. Swipe right (and left) to see the catalogue" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customText1"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scrollbars="none" />

    <ImageView
        android:id="@+id/detailsImageView"
        android:layout_width="400dp"
        android:layout_height="550dp"
        android:layout_below="@id/recyclerView"
        android:layout_marginTop="20dp"
        android:contentDescription="Animal Image" />

    <TextView
        android:id="@+id/detailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailsImageView"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="" />

</RelativeLayout>
